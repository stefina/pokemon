body
	padding 0
	margin 0
	width 320px

html, body, #map
	height 100%

a:visited, a:visited i
	color $font-color

div#fightMode, div#fightMode *
	font-family pokemon_font

.uppercase
	text-transform uppercase

.center
	text-align center

#map, .welcome
	height 600px

#map-container
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin 0
	padding 0

.header
	// position fixed
	// display block
	// z-index 1
	box-shadow 1px -10px -13px $box-shadow-color
	margin auto
	width 100%
	height 55px
	background-image url('/img/noisy/noisy.png')
	overflow hidden
	i
		margin 3px 3px		
	img
		width 150px
		height 88px
		margin -36px 0px
		padding 0 10%

